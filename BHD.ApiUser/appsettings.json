{
  "ConnectionStrings": {
    "BHDConnection": "Server=localhost;Database=BHDUserDb;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Validator": {
    "PasswordRegex": "^(?=.*[A-Z]).{8,16}$",
    "EmailRegex": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JWT": {
    "Issuer": "https://localhost:7007/",
    "Audience": "https://localhost:8080/",
    "Subject": "BaseWebApiSubject",
    "TokenTimeout": 30
  },
  "AllowedHosts": "*"
}
